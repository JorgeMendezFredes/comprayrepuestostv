---
import { waLink } from "../content/siteData";

interface Props {
    title: string;
    description: string;
    icon?: string;
    whatsappMessage?: string;
}

const { title, description, icon, whatsappMessage } = Astro.props;
---

<div class="card">
    {icon && <div class="card-icon" set:html={icon} />}
    <h3 class="card-title">{title}</h3>
    <p class="card-text">{description}</p>
    <a
        href={waLink(whatsappMessage)}
        class="btn btn-primary"
        target="_blank"
        rel="noopener"
    >
        Cotizar por WhatsApp
    </a>
</div>

<style>
    .card-icon {
        width: 48px;
        height: 48px;
        margin-bottom: var(--spacing-md);
        color: var(--color-primary);
    }

    .card-icon :global(svg) {
        width: 100%;
        height: 100%;
    }
</style>
